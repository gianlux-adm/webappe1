@model Ica.SalesOrders.Web.ViewModels.MenuAccessDetailViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header with-border">
        <div class="col-sm-12">
            <h3>@Html.Translate("MenuAccess","Details")</h3>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-sm-12">
                <table id="ResourceList" class="table table-striped">
                    <thead></thead>
                    <tbody id="ResourceBody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    var table;
    $(document).ready(function () {
         $.ajax({
        url: "@Url.Action("GetItems","MenuAccess")?UserId=" + @Model.UserId,
        success: function (data) {
            $("#ResourceBody").empty();
            for (i = 0; i < data.length; i++) {
                $("#ResourceBody").append("<tr><td>" + data[i] + "</td></tr>")
            }
            table = $("#ResourceList").dataTable({
                searching: false,
                paging: false
            });
        }
    })
    });
</script>