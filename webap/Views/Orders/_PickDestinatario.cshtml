@model Ica.SalesOrders.Web.ViewModels.Orders.PickDestinatarioViewModel
<div id="" class="modal-content" style="border-radius: 5px;">
    <div class="modal-header">
        <h3 class="modal-title">@Html.Translate("OrdiniVendita", "PickDestinatario")</h3>
    </div>
    <div class="modal-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>@Html.Translate("OrdiniVendita", "Destinatario")</th>
                    <th>@Html.Translate("OrdiniVendita", "Citta")</th>
                    <th>@Html.Translate("OrdiniVendita", "Indirizzo")</th>
                    <th>@Html.Translate("OrdiniVendita", "Provincia")</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Destinatari)
                {
                    <tr>
                        <td>
                            <input type="radio" name="destPicker" value="@item.NumeroIndirizzo" />
                        </td>
                        <td>@item.NomeRicerca</td>
                        <td>@item.Citta</td>
                        <td>@item.RigaIndirizzo3</td>
                        <td>@item.Provincia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">
            @Html.Translate("Shared", "Close")
        </button>
        <button id="btnPick" type="button" class="btn btn-primary">
            @Html.Translate("OrdiniVendita", "BtnSelezionaDestinatario")
        </button>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#btnPick").click(function() {
            var currentIndirizzo = $('input[name=destPicker]:checked').val()
            if (currentIndirizzo=="") {
                alert("nessun elemento selezionato")
            }
            else {
                setDestinatario(currentIndirizzo);
            }
        });
    });
</script>


