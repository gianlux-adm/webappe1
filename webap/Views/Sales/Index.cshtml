        }
    }

    @@media (max-width:767px) {
        .btnAction {
            margin: 5px 0px;
            width: 100%;
            float: left;
        }
    }

    @@media (min-width:768px) and (max-width:992px) {
        .btnAction {
            margin: 5px 5px;
            width: calc(50% - 10px);
            float: left;
        }
    }

    @@media (min-width:993px) {
        .btnAction {
